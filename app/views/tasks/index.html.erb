<div class="container">
	<h1>My tasks</h1>
	<div class="tasks my-3">
		<% @tasks.each do |task| %>
			<div class="d-flex align-items-center my-1">
				<% if task.completed %> 
					<i class="far fa-check-square"></i>
				<% else %>
					<i class="far fa-square"></i>
				<% end %>
				<%= link_to task.title.capitalize,task_path(task), class: :task %>
				<%= link_to task_path(task), method:'delete' do %>
					<i class="fas fa-trash-alt trash ml-2"></i>
				<% end %>
			</div>
		<% end %>
	</div>
	<div class="my-3">
		<%= link_to "Add new task", new_task_path, class: "btn btn-primary" %>
	</div>
</div>