<%= form_for(task) do |f| %>
	<div class="form my-3">
		<div class="my-4">
			<%= f.label :title, class: 'label' %>
			<%= f.text_field :title, class: 'form-control'%>
		</div>
		<div class="my-4">
			<%= f.label :details, class: 'label' %>
			<%= f.text_field :details, class: 'form-control' %>
		</div>
		<% unless task.new_record? %>
			<div class="completed">
				<%= f.check_box :completed %>
				<%= f.label :completed %>
			</div>
		<% end %>
		<div>
			<%= f.submit class: "btn btn-primary my-2" %>
		</div>
	</div>
<% end %>